<MyScreenManager>:
    MainScreen:

<MainScreen>:
    name: 'main'
    image_display: image_display

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # Top row: Images side by side
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                spacing: 10

                Label:
                    text: 'Original Image'
                    size_hint_y: None
                    height: 30

                Image:
                    id: initial_image_display
                    source: 'Default.JPG'
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: 1

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                spacing: 10

                Label:
                    text: 'Altered Image'
                    size_hint_y: None
                    height: 30

                Image:
                    id: image_display
                    source: 'Default.JPG'
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: 1

        # Bottom row: Buttons on left, Sliders on right
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 200
            spacing: 10

            # Left column: Buttons
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4
                spacing: 10

                Button:
                    text: 'Choose Image'
                    size_hint_y: None
                    height: 40
                    on_press: root.open_filechooser()

                Button:
                    text: 'Save Image'
                    size_hint_y: None
                    height: 40
                    on_press: root.save_image()


                Button:
                    text: 'Apply Filter'
                    size_hint_y: None
                    height: 40
                    on_press: root.apply_filter()

            # Right column: Sliders
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6
                spacing: 10

                # Minimum line length slider
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Min line length:'
                        size_hint_x: 0.5

                    CustomSlider:
                        id: slider_min_length
                        min: 1
                        max: 5
                        value: 2
                        step: 1
                        on_value: root.ids.slider_min_length_input.text = str(int(self.value))
                        size_hint_x: 0.7

                    TextInput:
                        id: slider_min_length_input
                        text: str(int(slider_min_length.value))
                        multiline: False
                        input_filter: 'int'
                        on_text_validate: root.update_slider_min_length(self.text)
                        size_hint_x: 0.3

                # Maximum line length slider
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Max line length:'
                        size_hint_x: 0.5

                    CustomSlider:
                        id: slider_max_length
                        min: 1
                        max: 5
                        value: 4
                        step: 1
                        on_value: root.ids.slider_max_length_input.text = str(int(self.value))
                        size_hint_x: 0.7

                    TextInput:
                        id: slider_max_length_input
                        text: str(int(slider_max_length.value))
                        multiline: False
                        input_filter: 'int'
                        on_text_validate: root.update_slider_max_length(self.text)
                        size_hint_x: 0.3

                # Allowed error slider
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Allowed Error:'
                        size_hint_x: 0.5

                    CustomSlider:
                        id: slider_allowed_error
                        min: 1
                        max: 75
                        value: 16
                        step: 1
                        on_value: root.ids.slider_allowed_error_input.text = str(int(self.value))
                        size_hint_x: 0.7

                    TextInput:
                        id: slider_allowed_error_input
                        text: str(int(slider_allowed_error.value))
                        multiline: False
                        input_filter: 'int'
                        on_text_validate: root.update_slider_allowed_error(self.text)
                        size_hint_x: 0.3

                # Brushstroke opacity slider
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text:'Brushstroke opacity:'
                        size_hint_x: 0.5

                    CustomSlider:
                        id: slider_opacity
                        min: 0.5
                        max: 1.0
                        value: 0.7
                        step: 0.1
                        on_value: root.ids.slider_opacity_input.text = "{:.1f}".format(self.value)
                        size_hint_x: 0.7

                    TextInput:
                        id: slider_opacity_input
                        text: "{:.1f}".format(slider_opacity.value)
                        multiline: False
                        on_text_validate: root.update_slider_opacity(self.text)
                        size_hint_x: 0.3